<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".questions.Question2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/degrade">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="131dp"
            android:layout_height="253dp"
            android:layout_marginTop="76dp"
            android:contentDescription="@string/image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/screenshot_2024_03_31_201406_removebg_preview" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="418dp"
            android:layout_height="450dp"
            android:contentDescription="@string/image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/rectengle_circle" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="339dp"
            android:layout_height="258dp"
            android:layout_marginTop="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView9">

            <ImageView
                android:id="@+id/imageAnswer3"
                android:layout_width="173dp"
                android:layout_height="124dp"
                android:contentDescription="@string/image"
                app:layout_column="0"
                app:layout_row="1"
                app:srcCompat="@drawable/chatgpt_logo" />

            <ImageView
                android:id="@+id/imageAnswer2"
                android:layout_width="166dp"
                android:layout_height="135dp"
                android:contentDescription="@string/image"
                app:layout_column="1"
                app:layout_row="0"
                app:srcCompat="@drawable/google_ai_gemini" />

            <ImageView
                android:id="@+id/imageAnswer1"
                android:layout_width="174dp"
                android:layout_height="135dp"
                android:contentDescription="@string/image"
                app:layout_column="0"
                app:layout_row="0"
                app:srcCompat="@drawable/new_removebg_preview" />

            <ImageView
                android:id="@+id/imageAnswer4"
                android:layout_width="164dp"
                android:layout_height="121dp"
                android:contentDescription="@string/image"
                app:layout_column="1"
                app:layout_row="1"
                app:srcCompat="@drawable/microsoft_copilot_logo" />

        </androidx.gridlayout.widget.GridLayout>

        <ImageView
            android:id="@+id/backQuestion2"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back_button" />

        <TextView
            android:id="@+id/imageQuestionText"
            android:layout_width="241dp"
            android:layout_height="157dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="12dp"
            android:text="@string/question2"
            app:layout_constraintBottom_toTopOf="@+id/imageView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backQuestion2" />

        <Button
            android:id="@+id/imageNext"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_marginBottom="36dp"
            android:text="@string/answer"
            app:layout_constraintBottom_toBottomOf="@+id/imageView9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>